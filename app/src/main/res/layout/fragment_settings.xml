<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/layout_botom_margin_size"
    android:layout_marginTop="@dimen/layout_top_margin_size"
    android:layout_marginStart="@dimen/quest_layout_left_margin_size"
    android:layout_marginEnd="@dimen/quest_layout_right_margin_size">

    <Switch
        android:id="@+id/switch_geoservice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/switch_geo_text" />

    <TextView
        android:id="@+id/switch_geoservice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaces_login" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout_btn"
        android:textColor="@color/red"
        style="?android:attr/borderlessButtonStyle" />

</LinearLayout>
